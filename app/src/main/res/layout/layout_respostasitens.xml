<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/respostasItens_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_background_dark"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tarefasItens_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estudar matemática"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tarefasItens_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, suas nominati quo no, nec consul audire ad. Tollit soleat virtute et quo, quo ea dicunt utamur, ei mel simul dicam" />

        <TextView
            android:id="@+id/tarefasItens_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Por Guilherme Ramos, 5 minutos atrás" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="33.3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/shape_circle_info"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="33.3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/shape_circle_info"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respostas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="33.3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/shape_circle_info"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Views" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>